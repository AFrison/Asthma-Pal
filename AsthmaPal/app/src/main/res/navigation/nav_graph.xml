<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.asthmapal.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/personalInformation"
        android:name="com.example.asthmapal.PersonalInformation"
        android:label="PersonalInformation" >
        <action
            android:id="@+id/action_personalInformation_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.asthmapal.ui.login.LoginScreen"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/peakFlow"
        android:name="com.example.asthmapal.PeakFlow"
        android:label="fragment_peak_flow"
        tools:layout="@layout/fragment_peak_flow" />
    <fragment
        android:id="@+id/mediChart"
        android:name="com.example.asthmapal.MediChart"
        android:label="fragment_medi_chart"
        tools:layout="@layout/fragment_medi_chart" />
    <fragment
        android:id="@+id/mediReminder"
        android:name="com.example.asthmapal.MediReminder"
        android:label="fragment_medi_reminder"
        tools:layout="@layout/fragment_medi_reminder" >
        <action
            android:id="@+id/action_mediReminder_to_mediChart"
            app:destination="@id/mediChart" />
        <action
            android:id="@+id/action_mediReminder_to_mediEnter"
            app:destination="@id/mediEnter" />
        <action
            android:id="@+id/action_mediReminder_to_peakFlow"
            app:destination="@id/peakFlow" />
    </fragment>
    <fragment
        android:id="@+id/mediEnter"
        android:name="com.example.asthmapal.MediEnter"
        android:label="fragment_medi_enter"
        tools:layout="@layout/fragment_medi_enter" />
    <fragment
        android:id="@+id/report"
        android:name="com.example.asthmapal.report"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report" />
    <fragment
        android:id="@+id/physicianInfo"
        android:name="com.example.asthmapal.PhysicianInfo"
        android:label="fragment_physician_info"
        tools:layout="@layout/fragment_physician_info" >
        <action
            android:id="@+id/action_physicianInfo_to_personalInformation"
            app:destination="@id/personalInformation" />
        <action
            android:id="@+id/action_physicianInfo_to_addPhsyicianInfo"
            app:destination="@id/addPhsyicianInfo" />
    </fragment>
    <fragment
        android:id="@+id/addPhsyicianInfo"
        android:name="com.example.asthmapal.AddPhsyicianInfo"
        android:label="fragment_add_phsyician_info"
        tools:layout="@layout/fragment_add_phsyician_info" />
</navigation>